// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/markdown
{
  "name": "Paolo Mainardi blog",
  "dockerFile": "../Dockerfile",
  "workspaceFolder": "${localWorkspaceFolder}",
  "workspaceMount": "source=${localWorkspaceFolder},target=${localWorkspaceFolder},type=bind",
  "mounts": [
    "source=./.cache,target=/home/node/.local,type=bind"
  ],
  "postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}",
  "containerEnv": {
    "HISTFILE": "/home/node/.local/.bash_history"
  },
  "remoteUser": "node",
  "userEnvProbe": "loginInteractiveShell",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      // this is needed until MS pushes >= 0.26.1 to fix this bug: https://github.com/docker/buildx/releases/tag/v0.26.1
      // packages are here: https://packages.microsoft.com/debian/12/prod/pool/main/m/moby-buildx/
      "mobyBuildxVersion": "0.25.0"
    }
  },
  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "yzhang.markdown-all-in-one",
        "DavidAnson.vscode-markdownlint",
        "znck.grammarly",
        "bungcip.better-toml",
        "zaaack.markdown-editor",
        "GitHub.copilot",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "typescript.preferences.includePackageJsonAutoImports": "on",
        "typescript.suggest.autoImports": true,
        "javascript.suggest.autoImports": true,
      }
    }
  }
}